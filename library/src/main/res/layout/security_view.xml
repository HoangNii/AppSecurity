<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_type"
            android:layout_gravity="end"
            android:padding="12dp"
            android:tint="#FFFFFF"
            android:src="@drawable/ic_pin"
            android:layout_width="40dp"
            android:layout_height="?actionBarSize"/>
        <TextView
            android:id="@+id/tv_change_type"
            android:background="?selectableItemBackground"
            android:paddingStart="10dp"
            android:paddingEnd="32dp"
            android:layout_gravity="end"
            android:textColor="#fff"
            android:gravity="center"
            android:text="THAY ĐỔI MÃ PIN"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"/>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="gone"
        android:id="@+id/img_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <RelativeLayout
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hoangit.library.passcode.PassCodeView
            android:layout_above="@+id/ads"
            android:layout_below="@+id/img_icon"
            android:id="@+id/pass_code_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.hoangit.library.pattern.PatternView
            android:layout_above="@+id/ads"
            android:layout_below="@+id/img_icon"
            android:id="@+id/pattern_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include layout="@layout/ads_footer"/>
    </RelativeLayout>
</RelativeLayout>