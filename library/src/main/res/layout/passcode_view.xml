<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">
    <TextView
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/tv_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:text="Đặt mã PIN của bạn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_body"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:text="Nhập 4 chữ số"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/viewIn"
        android:paddingTop="10dp"
        android:gravity="center"
        tools:ignore="ContentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgIn1"
            android:layout_margin="20dp"
            android:background="@drawable/bg_indicator_lock"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <ImageView
            android:id="@+id/imgIn2"
            android:layout_margin="20dp"
            android:background="@drawable/bg_indicator_lock"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <ImageView
            android:id="@+id/imgIn3"
            android:layout_margin="20dp"
            android:background="@drawable/bg_indicator_lock"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <ImageView
            android:id="@+id/imgIn4"
            android:layout_margin="20dp"
            android:background="@drawable/bg_indicator_lock"
            android:layout_width="15dp"
            android:layout_height="15dp" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/rcvKeyInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>


</LinearLayout>